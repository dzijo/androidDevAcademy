<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/marginLarge"
              android:paddingEnd="@dimen/marginLarge">
    <ImageButton
            android:id="@+id/changePriorityLow"
            android:layout_width="@dimen/detailsPriorityWidth"
            android:layout_height="@dimen/detailsPriorityHeight"
            android:background="@color/colorLow"/>

    <ImageButton
            android:id="@+id/changePriorityMedium"
            android:layout_width="@dimen/detailsPriorityWidth"
            android:layout_height="@dimen/detailsPriorityHeight"
            android:background="@color/colorMedium"
            android:layout_marginStart="10dp"/>

    <ImageButton
            android:id="@+id/changePriorityHigh"
            android:layout_width="@dimen/detailsPriorityWidth"
            android:layout_height="@dimen/detailsPriorityHeight"
            android:background="@color/colorHigh"
            android:layout_marginStart="10dp"/>

</LinearLayout>